<!DOCTYPE html>
<html>
  <head>
    <title>RivalCorp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
       
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", root_path %></li>
            <% if current_user.try(:admin?)%>
              <li> <%= link_to "Customers", users_path %></li>
            <% end %>
            <% if current_user.present? &&  !current_user.try(:admin?)%>

            <% end %>
            <% if current_user.present?%>
              <li><%= link_to "My Profile", user_path(current_user) %></li>
              <li><%= link_to "Deposit", deposits_path %></li>
              <li><%= link_to "Withdrawal", withdrawals_path %></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>

            <% else %>
              <li><%= link_to "Create customer", signup_path %></li>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
