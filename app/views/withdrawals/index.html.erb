<p id="notice"><%= notice %></p>

<h1>Withdrawals</h1>
<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @withdrawals.each do |withdrawal| %>
      <tr>
        <td><%= withdrawal.user_id %></td>
        <td><%= withdrawal.date %></td>
        <td><%= withdrawal.amount %></td>
       <!--  <td><%= link_to 'Show', withdrawal %></td>
        <td><%= link_to 'Edit', edit_withdrawal_path(withdrawal) %></td>
        <td><%= link_to 'Destroy', withdrawal, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<br/><br/>
<table>
  <thead>
    <tr>
      <th>Total Balance: Rs <%=current_user.balance%></th>
    </tr>
  </thead>
</table>
