<%= form_with(model: withdrawal, local: true) do |form| %>
  <% if withdrawal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(withdrawal.errors.count, "error") %> prohibited this withdrawal from being saved:</h2>

      <ul>
      <% withdrawal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if flash[:notice]%>
    <div id="error_explanation">
      <%=flash[:notice]%>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, id: :withdrawal_user_id, :value => current_user.id %>
  </div>

  <div class="field">
    <%= form.hidden_field :date, id: :withdrawal_date, :value => Date.today %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :withdrawal_amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
